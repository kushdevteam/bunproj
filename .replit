modules = ["rust-stable", "c-clang14", "cpp-clang14", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "pkg-config"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Solana Bundler Mock Server"

[[workflows.workflow]]
name = "Solana Bundler Mock Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 mock_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33513
externalPort = 3000

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "mock_server.py"]
