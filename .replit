modules = ["nodejs-20", "rust"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "pkg-config"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Solana Bundler Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rust Solana Bundler"

[[workflows.workflow]]
name = "Solana Bundler Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install express cors @solana/web3.js express-validator && node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Rust Solana Bundler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
